        <%- include('partials/footer'); -%>

		<!-- Add this script before the closing body tag -->
		<script>
			document.addEventListener('DOMContentLoaded', function() {
				const paginationItems = document.querySelectorAll('.theme-pagination li');
				const blogItems = document.querySelectorAll('.blog-item');

				paginationItems.forEach(item => {
					item.addEventListener('click', function() {
						const pageNum = this.getAttribute('data-page');
						
						// Update active class
						paginationItems.forEach(pi => pi.classList.remove('active'));
						this.classList.add('active');

						// Show/hide blog items
						blogItems.forEach(blog => {
							if(blog.getAttribute('data-page') === pageNum) {
								blog.style.display = 'block';
							} else {
								blog.style.display = 'none';
							}
						});
					});
				});
			});
		</script>
